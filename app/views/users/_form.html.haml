= simple_form_for(user) do |f|
  - if user.errors.any?
    #error_explanation
      %h2
        = pluralize(user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - user.errors.full_messages.each do |message|
          %li= message
  = f.input :username, label: "Brugernavn:"

  = f.input :email, label: "Email:"

  = f.input :password, label: "Kodeord:"

  = f.input :password_confirmation, label: "Gentag kodeord"

  = f.input :role_id, collection: @roles, label_method: :name, value_method: :id, label: "Rolle:", include_blank: false, selected: @user.role_id

  = f.input :school_id, collection: @schools, label_method: :name, value_method: :id,label: "Skole:", include_blank: false, selected: @user.school_id

  = f.input :grade_id, collection: @grades, label_method: :name, value_method: :id,label: "Klasse:", include_blank: false, selected: @user.grade_id
  
  = f.submit "Gem", class: "btn btn-default"
%br/
