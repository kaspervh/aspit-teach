<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Brugernavn</th>
      <th>Email</th>
      <th>Kodeord</th>
      <th>Rolle</th>
      <th>Skole</th>
      <th>Klasse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.role_id %></td>
        <td><%= user.school_id %></td>
        <td><%= user.grade_id %></td>
        <td><%= link_to 'Vis', user, class: "btn btn-success" %></td>
        <td><%= link_to 'Rediger', edit_user_path(user), class: "btn btn-success" %></td>
        <td><%= link_to 'Slet', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ny bruger', new_user_path, class: "btn btn-success" %>
