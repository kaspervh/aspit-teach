= simple_form_for @module_evaluation do |f|
  - if @module_evaluation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@module_evaluation.errors.count, "error")} prohibited this module_evaluation from being saved:"
      %ul
        - @module_evaluation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :module_name, collection: @module_evaluation.module_names, label: "VÃ¦lg modul:"
  .field
    = f.input :module_score, collection: (1..10), as: :radio_buttons, label: "score:" 
  .field
    = f.input :evaluation_explanation, as: :text, label: "begrundelse for score", input_html:{rows: 15}
  .field
    = f.hidden_field :author, value: @current_user.username
  .actions
    = f.submit 'Gem', class: "btn btn-default"
