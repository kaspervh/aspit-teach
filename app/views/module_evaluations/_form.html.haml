= form_for @module_evaluation do |f|
  - if @module_evaluation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@module_evaluation.errors.count, "error")} prohibited this module_evaluation from being saved:"
      %ul
        - @module_evaluation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :module_name
    = f.text_field :module_name
  .field
    = f.label :module_score
    = f.number_field :module_score
  .field
    = f.label :evaluation_explanation
    = f.text_area :evaluation_explanation
  .actions
    = f.submit 'Save'
