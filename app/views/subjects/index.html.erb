<p id="notice"><%= notice %></p>

<h1>Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= link_to 'Vis', subject, class: "btn btn-success" %></td>
        <td><%= link_to 'Rediger', edit_subject_path(subject), class: "btn btn-success"%></td>
        <td><%= link_to 'Slet', subject, class: "btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', new_subject_path, class: "btn btn-success" %>
