<p id="notice"><%= notice %></p>

<h1>Instruktioner</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructions.each do |instruction| %>
      <tr>
        <td><%= instruction.name.html_safe %></td>
        <td><%= link_to 'Vis', instruction, class: "btn btn-success" %></td>
        <td><%= link_to 'Rediger', edit_instruction_path(instruction), class: "btn btn-success" %></td>
        <td><%= link_to 'Slet', instruction, class: "btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ny instruktion', new_instruction_path, class: "btn btn-success" %>
